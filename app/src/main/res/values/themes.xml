<resources>

    <style name="Base.Theme.GithubUserSearch" parent="Theme.Material3.DayNight">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/teal_400</item>
        <item name="colorOnPrimary">@color/teal_200</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/grey_400</item>
        <item name="colorOnSecondary">@color/grey_200</item>
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_splash</item>
        <item name="windowSplashScreenAnimationDuration">10000</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.GithubUserSearch</item>
    </style>

    <style name="Theme.GithubUserSearch" parent="Base.Theme.GithubUserSearch" />
</resources>